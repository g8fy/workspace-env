Config { font = "xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true"
       , bgColor = "black"
       , fgColor = "grey"
       , position = BottomW L 100
			 --, border =       BottomB
   		 --, borderColor =  "#646464"

       , commands = [ Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Cpu ["-L","15","-H","50","--normal","green","--high","red"] 10
                    --, Run Memory ["-t","Mem: %"] 10
										, Run Memory         [ "--template" ,"Mem: <usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                              ] 10
										, Run Weather "EDDF" [ "--template", "<station>: <skyCondition> <tempC>Â°C |", "-L","10","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Swap [] 10
                    , Run Date "<fc=#FF9933>%a %b %_d %Y %H:%M:%S</fc>" "date" 10
                    , Run UnsafeStdinReader
                     ]
       , sepChar = "%"
			 , alignSep = "}{"
			 , template = "%UnsafeStdinReader% }{ %EDDF% %cpu% | %memory% * %swap% | %eth0% | %date%"
       }
